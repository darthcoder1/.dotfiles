{
  // Editor
  "editor.fontFamily": "Dank Mono, Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "editor.rulers": [
    100,
    120
  ],
  "editor.tabSize": 4,
  "editor.scrollBeyondLastLine": false,
  "editor.minimap.enabled": true,
  "editor.fontLigatures": false,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": false,
  "editor.smoothScrolling": true,
  "editor.renderLineHighlight": "all",
  // workbench
  "workbench.editor.highlightModifiedTabs": true,
  // Files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/_site": true,
    "**/.sass-cache": true,
    ".nyc_output": true,
    "**/install/**"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/comma-ai/**": true,
    "deps": true
  },
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  // Debug
  "debug.inlineValues": true,
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\Sysnative\\bash.exe",
  "gitlens.currentLine.enabled": false,
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  // Language dependent settings
  // disable editor formatting for js, so eslint can handle it
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "window.zoomLevel": 0,
  "C_Cpp.updateChannel": "Insiders",
  "indentRainbow.excludedLanguages": [
    "plaintext"
  ],
  "indentRainbow.tabmixColor": "",
  "clang.executable": "clang",
  "clang-format.executable": "clang-format",
  "debug.onTaskErrors": "debugAnyway",
  "yaml.schemas": {
    "file:///home/martinz/.vscode/extensions/me-dutour-mathieu.vscode-github-actions-2.2.7/schemas/workflow.schema.json": "/.github/workflows/*.yml",
    "file:///home/martinz/.vscode/extensions/me-dutour-mathieu.vscode-github-actions-2.2.7/schemas/action.schema.json": "/action.yml"
  },
  "[workflow]": {},
  "files.associations": {
    "*.yml": "yaml"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
}
